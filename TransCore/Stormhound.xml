<?xml version="1.0" encoding="utf-8"?>

<TranscendenceModule>
	
	<!-- Stormhound -->
	
	<Type UNID="&unidStormhound;">
		<StaticData>
			<Data id="MissionAttribute">"stormhoundMission"</Data>
			<Data id="Name">"Stormhound"</Data>
			<Data id="Sovereign">&svCommonwealth;</Data>
		</StaticData>

		<Events>
			<OnCharacterCanBeMet>
				True
			</OnCharacterCanBeMet>

			<OnGlobalSystemStopped>
				(rpgCharacterAscend &unidStormhound;)
			</OnGlobalSystemStopped>
		</Events>
	</Type>
	
	<!-- Stormhound's Ship -->

	<ShipClass UNID="&scStormhound;"
			manufacturer=		"Zubrin Systems"
			class=				"Elixir"
			type=				"megayacht"

			attributes=			"stormhound"
			character=			"&unidStormhound;"

			size=				"140"
			mass=				"3000"
			thrustRatio=		"2.0"
			maxSpeed=			"20"
			cargoSpace=			"3000"

			explosionType=		"&vtBlastExplosion2;"
			   
			dockingPorts=		"4"
			dockScreen=			"&dsRPGCharacterDefault;"
			>

		<Names noArticle="true" personalName="true">Stormhound</Names>
		
		<!-- Configuration -->
		
		<Armor
			armorID=			"&itCarbideCarapace;"
			count=				"12"
			/>
		
		<Devices>
			<Device deviceID="&itIonBlaster;" omnidirectional="true" />
			<Device deviceID="&itMissileDefense;" omnidirectional="true" />
			<Device deviceID="&itNephrenB700;"/>
		</Devices>

		<Maneuver
			maxRotationRate=	"6.0"
			rotationAccel=		"1.5"
			rotationStopAccel=	"6.0"
			/>

		<Interior>
			<Compartment name="interior"
					hitPoints=	"80"
					/>
			
			<Compartment name="main drive"
					type=		"mainDrive"
					hitPoints=	"50"

					posX=		"-50"
					posY=		"0"
					sizeX=		"50"
					sizeY=		"32"
					/>
		</Interior>
		
		<Items>
		</Items>

		<!-- Image and Effects -->

		<Image imageID="&rsElixirMegayacht;" imageWidth="185" imageHeight="185" rotationCount="120" rotationColumns="12"/>
		<HeroImage imageID="&rsElixirMegayachtHero;" imageWidth="320" imageHeight="320"/>

		<Effects>
			<Effect type="thrustMain"		posAngle="176"	posRadius="64"	posZ="-5"	rotation="180"	effect="&efMainThrusterLarge;"/>
			<Effect type="thrustMain"		posAngle="-176"	posRadius="64"	posZ="-5"	rotation="180"	effect="&efMainThrusterLarge;"/>
			<Effect type="thrustMain"		posAngle="172"	posRadius="64"	posZ="5"	rotation="180"	effect="&efMainThrusterLarge;"/>
			<Effect type="thrustMain"		posAngle="-172"	posRadius="64"	posZ="5"	rotation="180"	effect="&efMainThrusterLarge;"/>
			<Effect type="thrustMain"		posAngle="-180"	posRadius="64"	posZ="10"	rotation="180"	effect="&efMainThrusterLarge;"/>
		</Effects>

		<AISettings
			fireRateAdj=		"20"
			fireAccuracy=		"90"
			perception=			"4"
			
			combatStyle=		"standOff"
			/>

		<!-- AI and Behavior -->
		
		<Language>
			<Text id="FirstMeetingIntro">
				(list
					{
						desc: (cat
							"The airlock opens into a wide hall with clean, curved walls and comfortable couches. "
							"Two large men in fine suits and tactical eyewear stop you firmly.\n\n"
							
							"\"This is a private vessel. Unless you need assistance, we insist that you please leave.\""
							)
							
						nextLabel: "\"Uh, '[S]tormhound'?\""
						}
					)
			</Text>

			<Text id="MeetingIntro">
				(cat
					"The airlock opens into a wide hall with clean, curved walls and comfortable couches. "
					"Two large men in fine suits and tactical eyewear frisk you firmly. Without apology, "
					"they lead you forward."
					)
			</Text>

			<Text id="NoMissions">
				(cat
					"The airlock refuses to open."
					)
			</Text>
		</Language>
	</ShipClass>
	
</TranscendenceModule>
