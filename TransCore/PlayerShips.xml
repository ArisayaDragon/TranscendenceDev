			class=				"EI500"
			type=				"freighter"

			attributes=			"00200000_PlayerShip"
			inherit=			"&scPlayerEI500Base;"
			characterClass=		"&unidPilgrimClass;"

			size=				"27"
			mass=				"150"
			thrustRatio=		"1.5"
			maxSpeed=			"18"
			cargoSpace=			"200"

			reactorPower=		"250"
			fuelCapacity=		"60000"
			maxArmor=			"20000"
			maxCargoSpace=		"200"
			maxDevices=			"9"
			maxWeapons=			"2"
			>

		<!-- Configuration -->
		
		<Armor
			armorID=			"&itHeavyTitaniumPlate;"
			count=				"4"
			/>
		
