				portRadius=		"245"
				>
		</DockingPorts>
		
		<!-- Events and Behavior -->

		<Events>
			<OnCreate>
				(sysAddObjRecurringTimerEvent 150 gSource "OnTrafficControl")
			</OnCreate>

			<OnContractGenerate>
				(intGenerateStandardRequestContract1)
