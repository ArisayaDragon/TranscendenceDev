				</Group>
				<Ship chance="10"	count="1d2"	class="&scAtonement;"	orders="guard"/>
			</Table>
		</Ships>

		<Items>
			<Lookup					count="1d4"	table="&trStationSupplies;" />
			<Table>
				<Lookup chance="50"	count="1" table="&trHaloGems;"/>
				<Lookup chance="20" count="1" table="&trConsumables6;"/>
				<Lookup chance="20" count="1" table="&trMinorItem6;"/>
				<Lookup chance="10" count="1" table="&trMajorItem6;"/>
			</Table>
		</Items>

	</StationType>

	<!-- Level 7: Penitent Sanctum -->

	<StationType UNID="&stPenitentSanctum;"
			name=				"Penitent sanctum"
			sovereign=			"&svPenitents;"
			abandonedScreen=	"&dsAbandonedStation;"
			dockingPorts=		"8"
			canAttack=			"true"

			multiHull=			"true"
			armorID=			"&itBlastPlate;"
			hitPoints=			"700"
            regen=              "3.5"
			fireRateAdj=		"40"
			ejectaType=			"&vtWreckEjecta;"
			noFriendlyFire=		"true"

			attributes=			"enemy, envAir, envAvoidsFire, generic, human, penitents, populated, religious"
			levelFrequency=		"----v curv- ----- ----- -----"
			locationCriteria=	"+nebulae"
			>

		<Image			imageID="&rsStations5;" imageX="128" imageY="256" imageWidth="128" imageHeight="128"/>

		<Devices>
			<Device deviceID="&itOracusHarassPower;"/>
			<Device deviceID="&itAbsolutionCannon;"	omnidirectional="true"/>
		</Devices>

		<Ships>
			<Table>
				<Ship chance="25"	count="1d6"	class="&scRepentant;"	orders="guard"/>
				<Group chance="50">
					<Ship			count="1d4"	class="&scRepentant;"	orders="guard"/>
					<Ship			count="1"	class="&scAtonement;"	orders="guard"/>
				</Group>
				<Ship chance="25"	count="1d4"	class="&scAtonement;"	orders="guard"/>
			</Table>
		</Ships>

		<Items>
			<Lookup					count="1d4"	table="&trStationSupplies;" />
			<Lookup chance="95"		count="1"	table="&trHaloGems;"/>
			<Table chance="50">
				<Lookup chance="40" count="1" table="&trConsumables7;"/>
				<Lookup chance="40" count="1" table="&trMinorItem7;"/>
				<Lookup chance="20" count="1" table="&trMajorItem7;"/>
			</Table>
		</Items>

	</StationType>
	
<!-- SHIP CLASSES -->

	<!-- Level 4: Repentant-class Gunship -->

	<ShipClass UNID="&scRepentant;"
			manufacturer=		"United African States"
			class=				"Repentant"
			type=				"gunship"
			defaultSovereign=	"&svPenitents;"

			attributes=			"genericClass, penitent, penitents"
			   
			mass=				"50"
			thrustRatio=		"7"
			maxSpeed=			"25"
			cargoSpace=			"25"
			>

		<!-- Configuration -->
		
		<Armor
			armorID=			"&itAdvancedReactiveArmor;"
			count=				"4"
			/>
		
		<Devices>
			<Device deviceID="&itAbsolutionCannon;"/>
			<Device deviceID="&itClass1Deflector;"/>
		</Devices>

		<Maneuver
			maxRotationRate=	"18.0"
			rotationAccel=		"6.0"
			/>

		<!-- Items -->
		
		<Items>
			<Item count="4d6" item="&itHelium3FuelRod;"/>
		</Items>

		<!-- Image and Effects -->
		
		<Image imageID="&rsMediumShips3;" imageX="0" imageY="0" imageWidth="96" imageHeight="96" rotationOffset="-25"/>

		<Effects>
			<Effect type="thrustMain"		posAngle="158"	posRadius="17"	posZ="0"	rotation="180"/>
			<Effect type="thrustMain"		posAngle="-158"	posRadius="17"	posZ="0"	rotation="180"/>
		</Effects>
		
		<!-- AI and Behavior -->
		
		<AISettings
			aggressor=			"true"
			fireRateAdj=		"10"
			fireAccuracy=		"90"
			perception=			"4"
			ignoreShieldsDown=	"true"
			
			combatStyle=		"advanced"
			/>
	</ShipClass>

	<!-- Level 5: Atonement-class Gunship -->

	<ShipClass UNID="&scAtonement;"
			manufacturer=		"United African States"
			class=				"Atonement"
			type=				"heavy gunship"
			defaultSovereign=	"&svPenitents;"

			attributes=			"genericClass, penitent, penitents"
			   
			mass=				"100"
			thrustRatio=		"7"
			maxSpeed=			"20"
			cargoSpace=			"25"
			>

		<!-- Configuration -->
		
		<Armor
			armorID=			"&itHeavyPlasteelPlate;"
			count=				"4"
			/>
		
		<Devices>
			<Device deviceID="&itAbsolutionCannon;"/>
			<Device deviceID="&itClass1Deflector;"/>
			<Device deviceID="&itMAGLauncher;">
				<Items>
					<Item count="2d6" item="&itPX3HexageneMAG;"/>
				</Items>
			</Device>
		</Devices>

		<Maneuver
			maxRotationRate=	"9.0"
			rotationAccel=		"3.0"
			/>
		
		<!-- Items -->

		<Items>
			<Item count="5d6" item="&itHelium3FuelRod;"/>
		</Items>

		<!-- Image and Effects -->
		
		<Image imageID="&rsMediumShips2;" imageX="64" imageY="0" imageWidth="64" imageHeight="64"/>

		<Effects>
			<Effect type="thrustMain"		posAngle="180"	posRadius="23"	posZ="0"	rotation="180"	sendToBack="4,16"/>
		</Effects>
		
		<!-- AI and Behavior -->
		
		<AISettings
			aggressor=			"true"
			fireRateAdj=		"25"
			fireAccuracy=		"90"
			perception=			"4"
			
			combatStyle=		"advanced"
			/>
	</ShipClass>

	<!-- Level 6: Excruciator-class Destroyer -->

	<ShipClass UNID="&scExcruciatorDestroyer;"
			manufacturer=		"Penitents"
			class=				"Excruciator"
			type=				"destroyer"
			defaultSovereign=	"&svPenitents;"

			attributes=			"capitalShip, genericClass, penitents"

			size=				"140"
			mass=				"14000"
			thrustRatio=		"1"
			maxSpeed=			"12"
			cargoSpace=			"500"

			cyberDefenseLevel=	"4"

			explosionType=		"&vtBlastExplosion4;"
			>

		<!-- Configuration -->
		
		<Armor
			armorID=			"&itBlastPlate;"
			count=				"12"
			/>
		
		<Devices>
			<Device deviceID="&itMAGLauncher;"	omnidirectional="true">
				<Items>
					<Item count="2d6" item="&itPX19OblivionMAG;"/>
					<Item count="12d6" item="&itPX3HexageneMAG;"/>
				</Items>
			</Device>
			<Device deviceID="&itAbsolutionCannon;" secondaryWeapon="true" minFireArc="340" maxFireArc="160" posAngle="17"  posRadius="66"  posZ="5"/>
			<Device deviceID="&itAbsolutionCannon;" secondaryWeapon="true" minFireArc="200" maxFireArc="20"	 posAngle="343" posRadius="66"  posZ="5"/>
			<Device deviceID="&itClass3Deflector;"/>
			<Device deviceID="&it100MWReactor;"/>
		</Devices>

		<Maneuver
			maxRotationRate=	"5"
			rotationAccel=		"0.5"
			/>

		<Interior>
			<Compartment name="interior"
					hitPoints=	"250"
					/>
			
			<Compartment name="main drive"
					type=		"mainDrive"
					hitPoints=	"100"

					posX=		"-52"
					posY=		"0"
					sizeX=		"26"
					sizeY=		"42"
					/>
		</Interior>
		
		<!-- Items -->

		<Items>
			<Item				  count="2d6"	item="&itHeliumAssembly;"/>
			<Table>
				<Lookup chance="40" count="1" table="&trConsumables6;"/>
				<Lookup chance="40" count="1" table="&trMinorItem6;"/>
				<Lookup chance="20" count="1" table="&trMajorItem6;"/>
			</Table>
		</Items>

		<!-- Image and Effects -->

		<Image imageID="&rsTripoli;" imageWidth="156" imageHeight="156"/>

		<Effects>
			<Effect type="thrustMain"		posAngle="167"	posRadius="72"	posZ="0"	rotation="180"	effect="&efMainThrusterLarge;"/>
			<Effect type="thrustMain"		posAngle="-167"	posRadius="72"	posZ="0"	rotation="180"	effect="&efMainThrusterLarge;"/>
			<Effect type="thrustMain"		posAngle="175"	posRadius="70"	posZ="5"	rotation="180"	effect="&efMainThrusterLarge;"/>
			<Effect type="thrustMain"		posAngle="-175"	posRadius="70"	posZ="5"	rotation="180"	effect="&efMainThrusterLarge;"/>
		</Effects>
		
		<!-- AI and Behavior -->
		
		<AISettings
			fireRateAdj=		"30"
			fireAccuracy=		"90"
			perception=			"5"
			
			combatStyle=		"standOff"
			/>

	</ShipClass>

<!-- ITEM TYPES -->
	
