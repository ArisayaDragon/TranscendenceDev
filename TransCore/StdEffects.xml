<!-- COMMON FIRE EFFECTS =======================================================

-->
	
	<Effect UNID="&efMediumCannonFlash;">
		<Polyflash/>
	</Effect>
	
	<EffectType UNID="&efGreenLaserFireEffect;"
			instance=			"owner"
			>
		<Effect>
			<Orb	style=			"flare"
					animate=		"fade"
					intensity=		"50"
					primaryColor=	"#5ff12a"
					secondaryColor=	"#00ff00"
					
					lifetime=		"3"
					>
				<Events>
					<GetParameters>
						(block (
							(damageHP (@ gData 'damageHP))
							)
							
							{
								radius: (mathScale damageHP 1 30 12 28 50)
								}
							)
					</GetParameters>
				</Events>
			</Orb>
			
			<Ray	style=			"smooth"
					shape=			"tapered"
					intensity=		"50"
					xformRotation=	"180"
					primaryColor=	"#5ff12a"
					secondaryColor=	"#00ff00"
					
					lifetime=		"3"
					animateOpacity= "fade"
					>
				<Events>
					<GetParameters>
						(block (
							(damageHP (@ gData 'damageHP))
							)
							
							{
								length: (mathScale damageHP 1 30 24 56 50)
								width: (mathScale damageHP 1 30 25 56 50)
								}
							)
					</GetParameters>
				</Events>
			</Ray>
		</Effect>
	</EffectType>

<!-- COMMON HIT EFFECTS ========================================================

	These hit effects are used by more than one weapon. They are alternate
	versions of the default hit effects.
	
-->

	<EffectType UNID="&efGreenLaserHitEffect;"
			sound="&snArmorHit1;"
			>
		<Effect>
			<Orb	style=			"flare"
					animate=		"fade"
					primaryColor=	"#5ff12a"
					secondaryColor=	"#00ff00"
					>
				<Events>
					<GetParameters>
						(block (
							(damageHP (@ gData 'damageHP))
							)
							
							{
								radius: (if (= damageHP 0) 6 (mathScale damageHP 1 30 20 60 50))
								lifetime: (if (= damageHP 0) 4 (mathScale damageHP 1 30 8 16 50))
								intensity: (if (= damageHP 0) 0 (mathScale damageHP 1 30 25 50 50))
								
								noSound: (= damageHP 0)
								}
							)
					</GetParameters>
				</Events>
			</Orb>
		</Effect>
	</EffectType>
		
