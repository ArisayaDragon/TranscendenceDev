					</Ship>
					<Ship			count="1d2"	class="&scBarbary;"		orders="guard"/>
					<Ship			count="1d4"	class="&scViking-II;"	orders="guard"/>
				</Group>
			</Table>

			<Ship					count="1d2"	class="&scTripoli;"	orders="patrol" patrolDist="50">
				<Escorts>
					<Ship			count="1"	class="&scBarbary;"	orders="escort"/>
