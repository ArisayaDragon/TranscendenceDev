<?xml version="1.0" encoding="utf-8"?>

<TranscendenceModule>
	
<!-- ITEMS -->
	
	<!-- Level 2: Mining Laser -->

	<ItemType UNID="&itMiningLaser;"
			name=				"mining laser"
			attributes=			"commonwealth, energyWeapon, majorItem, miningEquipment, specialty"
			  
			level=				"2"
			frequency=			"rare"

			value=				"1150"
			mass=				"2000"
			  
			description=		"This powerful laser is generally used for asteroid mining."
			>

		<Image imageID="&rsItems2;" imageX="96" imageY="96" imageWidth="96" imageHeight="96"/>

		<Weapon
				type=				"beam"

				repeating=			"4"
				damage=				"laser:1d4+1; mining:3;"
				fireRate=			"30"
				lifetime=			"15"
				powerUse=			"30"

				fireEffect=			"&efGreenLaserFireEffect;"
				hitEffect=			"&efGreenLaserHitEffect;"
				sound=				"&snLaserCannon;"
				>
			<Effect>
				<Beam
						beamType=			"laser"
						primaryColor=		"0x5f, 0xf1, 0x2a"
						secondaryColor=		"0x00, 0xff, 0x00"
						/>
			</Effect>			
		</Weapon>
	</ItemType>

	<!-- Level 3: Miner's Cargo Hold -->

	<ItemType UNID="&itMinersCargoHold;"
			name=				"miner's cargo hold"
			attributes=			"commonwealth, majorItem, minersHold, miningEquipment"
			  
			level=				"3"
			frequency=			"rare"

			value=				"2000"
			mass=				"1250"
			  
			description=		"Designed for mining ships, this cargo hold has grapples to bring ore on board."
			>

		<Image imageID="&rsItems1;" imageX="96" imageY="192" imageWidth="96" imageHeight="96"/>

		<CargoHoldDevice
				cargoSpace=		"150"
				>
			<Equipment>
				<Install equipment="miningComputer"/>
			</Equipment>
		</CargoHoldDevice>

	</ItemType>

	<!-- Level 6: Plasma Torch -->

	<ItemType UNID="&itPlasmaTorch;"
			name=				"plasma torch(es)"
			attributes=			"commonwealth, majorItem, miningEquipment"
			  
			level=				"6"
			frequency=			"rare"

			value=				"12000"
			mass=				"4000"
			  
			description=		"Plasma torches are used for large-scale asteroid mining."
			>

		<Image imageID="&rsItems6;" imageX="192" imageY="96" imageWidth="96" imageHeight="96"/>

		<Weapon
				type=				"particles"
				damage=				"plasma:30; mining:5; WMD:2"
				
				fireRate=			"30"

				powerUse=			"300"
				sound=				"&snRecoillessCannon;"
				>
			
			<ParticleSystem
					style=				"spray"
					emitLifetime=		"1"
					emitRate=			"60-75"
					emitSpeed=			"40"
					spreadAngle=		"1"
					
					particleLifetime=	"30"
					particleEffect=		"&efPlasmaParticleDefault;"
					>
			</ParticleSystem>
		</Weapon>
	</ItemType>

</TranscendenceModule>
